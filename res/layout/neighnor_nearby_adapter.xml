<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView_adapter_neighbor_nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/neighbor_nearby"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imageView_adapter_neighbor_nearby"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_adapter_neighbor_nearby_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textView_adapter_neighbor_nearby_name_margin_left" />

        <TextView
            android:id="@+id/textView_adapter_neighbor_nearby_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textView_adapter_neighbor_nearby_name_margin_left" />
    </LinearLayout>

    <Button
        android:id="@+id/button_adapter_neighbor_nearby_follow"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/follow_button_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/main_layout_right_left_margin"
        android:background="@drawable/white_button_with_shade"
        android:text="@string/follow"
        android:textSize="@dimen/follow_button_text_size" />

</RelativeLayout>