<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_layout_right_left_margin"
        android:layout_marginRight="@dimen/main_layout_right_left_margin"
        android:layout_marginTop="@dimen/margin_from_upperLayout"
        android:background="@drawable/edit_text_background"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/editTextGapSize"
            android:layout_weight="1"
            android:background="@drawable/social_network_login_background_left"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/next"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/next" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/social_network_login_background_top_right" >

                <TextView
                    android:id="@+id/editText_activity_registration_screen_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/social_network_login_background_top_right"
                    android:paddingBottom="@dimen/editText_email_padding_top_bottom"
                    android:paddingLeft="@dimen/editText_email_padding_left"
                    android:paddingTop="@dimen/editText_email_padding_top_bottom"
                    android:text="Sachin Pareek"
                    android:textSize="@dimen/social_networks_text_size" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/follow_button_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/white_button_with_shade"
                    android:text="@string/follow"
                    android:textSize="@dimen/follow_button_text_size" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/editTextGapSize"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/textView_activity_profile_screen_followers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:text="7"
                        android:textSize="@dimen/social_networks_text_size" />

                    <TextView
                        android:id="@+id/editText_activity_registration_screen_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_activity_profile_screen_followers"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:text="@string/followers"
                        android:textSize="@dimen/social_networks_text_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="@dimen/editTextGapSize"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/textView_activity_profile_screen_following"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:text="11"
                        android:textSize="@dimen/social_networks_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_activity_profile_screen_following"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:text="@string/following"
                        android:textSize="@dimen/social_networks_text_size" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_layout_right_left_margin"
        android:layout_marginRight="@dimen/main_layout_right_left_margin"
        android:layout_marginTop="@dimen/margin_from_upperLayout"
        android:background="@drawable/edit_text_background"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/social_network_login_background_top_right" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/social_network_login_background_top"
                android:paddingBottom="@dimen/editText_email_padding_top_bottom"
                android:paddingLeft="@dimen/editText_profile_page_padding_left"
                android:paddingTop="@dimen/editText_email_padding_top_bottom"
                android:text="@string/here_user_abt_urself"
                android:textSize="@dimen/profile_page_users_will_come_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/editTextGapSize" >

            <EditText
                android:id="@+id/editText_activity_profile_screen_professional_skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="@string/professional_skills"
                android:inputType="text"
                android:paddingBottom="@dimen/editText_email_padding_top_bottom"
                android:paddingLeft="@dimen/editText_profile_page_padding_left"
                android:paddingTop="@dimen/editText_email_padding_top_bottom"
                android:textSize="@dimen/profile_page_users_will_come_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/editTextGapSize" >

            <EditText
                android:id="@+id/editText_activity_profile_screen_neighborhood_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/social_network_login_background_bottom"
                android:hint="@string/neighborhood_goal"
                android:inputType="text"
                android:paddingBottom="@dimen/editText_email_padding_top_bottom"
                android:paddingLeft="@dimen/editText_profile_page_padding_left"
                android:paddingTop="@dimen/editText_email_padding_top_bottom"
                android:textSize="@dimen/profile_page_users_will_come_text_size" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_layout_right_left_margin"
        android:layout_marginRight="@dimen/main_layout_right_left_margin"
        android:layout_marginTop="@dimen/margin_from_upperLayout"
        android:background="@drawable/edit_text_background" >

        <ImageView
            android:contentDescription="@string/click_to_share"
            android:id="@+id/imageView_profile_screen_click_to_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/social_network_login_background_left"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/imageView_profile_screen_click_to_share"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/editTextGapSize"
            android:layout_toRightOf="@id/imageView_profile_screen_click_to_share"
            android:background="@drawable/social_network_login_background_right"
            android:paddingBottom="@dimen/editText_email_padding_top_bottom"
            android:paddingLeft="@dimen/editText_profile_page_padding_left"
            android:paddingTop="@dimen/editText_email_padding_top_bottom"
            android:text="@string/click_to_share"
            android:textSize="@dimen/profile_page_users_will_come_text_size" />
    </RelativeLayout>

</LinearLayout>