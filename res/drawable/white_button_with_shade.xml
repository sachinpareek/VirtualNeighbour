<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#C1BFC0" />
        </shape>
    </item> 
    <item>
        <shape>
            <gradient
                android:startColor="#FCFCFC"
                android:endColor="#EEEEEE"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#C1BFC0" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
</selector>